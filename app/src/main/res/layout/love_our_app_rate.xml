<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/imgFun"
        android:layout_width="413dp"
        android:layout_height="282dp"
        android:src="@drawable/ic_diversao"
        android:layout_marginTop="10dp"
 />

    <TextView
        android:id="@+id/txtLove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:fontFamily="@font/gotham"
        android:text="@string/love_our_app"
        android:textColor="#2C2C2F"
        android:textSize="45sp"
 />

    <TextView
        android:id="@+id/txtGive"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:fontFamily="@font/mlight"
        android:textAlignment="center"
        android:text="@string/please_give_five"
        android:textSize="24sp"
 />

    <ImageView
        android:id="@+id/star1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_piscadela" />



</LinearLayout>